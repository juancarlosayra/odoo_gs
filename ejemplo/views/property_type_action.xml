<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="property_type_action" model="ir.actions.act_window">
        <field name="name">Property Type Action</field> 
        <field name="res_model">ejemplo.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_property_type_form" model="ir.ui.view">
        <field name="name">ejemplo.property.type.form</field>
        <field name="model">ejemplo.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <header>
                    <button name="%(property_type_action)d" type="action" string="Compute Property Type Count" class="oe_highlight"/>
                </header>
            </form>
        </field>
    </record>

</odoo>